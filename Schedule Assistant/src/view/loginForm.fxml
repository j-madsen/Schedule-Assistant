<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.loginFormController">
   <children>
      <Label fx:id="scheduleLabel" layoutX="21.0" layoutY="22.0" opacity="0.3" text="Schedule Assistant">
         <font>
            <Font name="System Bold" size="17.0" />
         </font>
      </Label>
      <Label fx:id="signInLabel" layoutX="261.0" layoutY="109.0" text="Sign-In:" textAlignment="CENTER">
         <font>
            <Font name="System Bold" size="21.0" />
         </font>
      </Label>
      <Label fx:id="userLabel" layoutX="119.0" layoutY="182.0" text="Username:">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <Label fx:id="passwordLabel" layoutX="121.0" layoutY="231.0" text="Password:">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <TextField fx:id="usernameField" layoutX="233.0" layoutY="180.0" />
      <TextField fx:id="passwordField" layoutX="234.0" layoutY="229.0" />
